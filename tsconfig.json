{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "rootDirs": [
            "src",
            "temp/sass-ts"
        ],
        "target": "es2016",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_module/phaser/types"
        ],
        "types": [
            "heft-jest"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
